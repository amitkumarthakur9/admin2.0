{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015",
      "es2017" // you can add higher versions as needed
    ],
    "paths": {
      "*": ["*", "src/*", "app/*", "@types/*"]
    },
    "typeRoots": ["@types"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-native",
    "module":"esnext",
  },
  "extends": "expo/tsconfig.base",
  "include": ["@types/global.d.ts", "src/**/*", "app/**/*"]
}